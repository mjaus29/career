generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Progress {
  id        String   @id @default(cuid())
  name      String   @unique
  value     Float
  target    Float?
  unit      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DailyProgress {
  id        String   @id @default(cuid())
  date      DateTime @unique @db.Date
  gfeCards  Int      @default(0)
  femHours  Float    @default(0)
  jsmPercent Int     @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}